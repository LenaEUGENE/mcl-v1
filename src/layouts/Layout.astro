---
import "../styles/global.css";
interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const {
	title = 'Monc corps libéré',
	description = 'Votre rendez-vous bien-être en Martinique',
	image="/images/massage_1.jpg"
} = Astro.props;

---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-offwhite text-gray text-fs-base relative">
		<slot />
	</body>
</html>