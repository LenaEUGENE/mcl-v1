---
// library imports
import { Icon } from 'astro-icon';

interface Props {
    type: 'button' | 'submit',
    role: 'link' | 'button';
    label: string;
    href: string;
    icon?:
        {
            name: string
            side: "left" | "right";
        };
    classes?: string;
}

const {
    type,
    role,
    label,
    href,
    icon,
    classes,
    ...rest
} = Astro.props as Props;
---

<a
    {type}
    aria-roledescription="link"
    role={role}
    href={href}
    class:list={[
        "group px-4 py-3 inline-flex justify-center items-center gap-1 text-fs-base rounded-full border border-brand-600 focus:outline-none focus:ring-2 focus:ring-offset-2 ease-in-out duration-300 cursor-pointer",
        classes,
        ]}
    {...rest}
    >
        
    {label}
    <Icon name={icon?.name} class="icon w-6 group-hover"/>
</a>

<style>
    .sm {
        @apply px-2 py-1;
    }
    .isFilled{
        @apply
        text-gray-900 bg-brand-500
        hover:bg-brand-500/90
        focus:ring-brand-500 focus:bg-brand-500;
    }
    .isFilled .icon{
        @apply text-gray-900;
    }

    .isGhost{
        @apply 
        text-gray-900 bg-offwhite
        hover:text-gray-900 hover:bg-brand-500/90
        focus:ring-brand-500 focus:bg-brand-500;
    }
    .group-hover{
        @apply
        hover:text-gray-900;
    }
</style>